---
import { readFile } from "@directus/sdk";

import { Client } from "@/lib/directus";

interface Props {
  id: string;
  alt?: string;
}

const { id, alt } = Astro.props;
const asset = await Client.request(readFile(id));
---

<img
  loading="lazy"
  src={`/assets/${id}?width=1800&height=1800&fit=inside`}
  alt={alt}
  width={asset?.width}
  height={asset?.height}
/>
