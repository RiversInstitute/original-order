---
import { marked } from "marked";

interface Props {
  content: string;
}

const { content } = Astro.props;
---

<div data-markdown set:html={marked.parse(content)} />

<style>
  div[data-markdown] {
    max-width: 800px;
    font-size: calc(1.25 * var(--font-size--base));
    line-height: 1.4lh;

    p,
    ul,
    ol {
      font-weight: bold;
    }

    > *:not(:first-child) {
      margin-top: 1lh;
    }

    ul {
      padding-left: 1.5em;
      list-style: disc;
    }

    ol {
      padding-left: 1.5em;
      list-style: decimal;
    }
  }
</style>
